from game import Game

if __name__ == "__main__":
    game1 = Game()
    group_a, group_b, group_c, group_d, group_e, group_f, group_g, group_h = game1.chou()
    game1.my_play(0)
    game1.other_play(0)
    print("-------------------------------------")
    group_a.my_show()
    print("---------------")
    group_b.my_show()
    print("---------------")
    group_c.my_show()
    print("---------------")
    group_d.my_show()
    print("---------------")
    group_e.my_show()
    print("---------------")
    group_f.my_show()
    print("---------------")
    group_g.my_show()
    print("---------------")
    group_h.my_show()
    print("-------------------------------------")
    game1.my_play(1)
    game1.other_play(1)
    print("-------------------------------------")
    group_a.my_show()
    print("---------------")
    group_b.my_show()
    print("---------------")
    group_c.my_show()
    print("---------------")
    group_d.my_show()
    print("---------------")
    group_e.my_show()
    print("---------------")
    group_f.my_show()
    print("---------------")
    group_g.my_show()
    print("---------------")
    group_h.my_show()
